{
  "manifest_version": 3,
  "name": "Bookflight Guide",
  "version": "1.1.0",
  "description": "Amadeus Booking Assistant - Your guide to efficient flight bookings",
  "action": {
    "default_popup": "extension.html",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://api.anthropic.com/*"
  ]
}